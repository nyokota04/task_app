<h3>予定一覧</h3>
<h4>開始日が近い順に表示されます</h4>

<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>
 
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.title %></td>
        <td><%= user.start_day.to_s(:datetime_jp) %></td>
        <td><%= user.end_day.to_s(:datetime_jp) %></td>
        <td>
          <% if user.all_day == true %>
          ○
          <% else user.all_day == false %>
          <% end %>
          </td>
        <td><%= user.updated_at.to_s(:datetime_jp1) %></td>
        <td><%= link_to "詳細", user %></td>
        <td><%= link_to "編集", [:edit, user] %></td>
        <td><%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
<p><%= link_to "ユーザー新規登録", :new_user %></p>

<footer>
  <h1>現在の日時：<%= Date.today.strftime("%Y年%m月%d日") %>　スケジュールの合計<%= User.count%></h1>
</footer>
    
